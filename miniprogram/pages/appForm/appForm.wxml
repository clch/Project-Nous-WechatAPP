            <view class="weui-cell weui-cell_active">
                <view class="weui-cell__hd">
                    <view class="weui-label">营地</view>
                </view>
                    <view class="weui-cell__bd">
                        <picker mode="selector" range= "{{venues}}" value="{{venue}}" bindchange="bindVenueChange">
                            <view class="weui-input">{{venues[venue]}}</view>
                        </picker>
                    </view>
            </view> 
            <view class="weui-cell weui-cell_active">
                <view class="weui-cell__hd">
                    <view class="weui-label">是否能够全程参与</view>
                </view>
